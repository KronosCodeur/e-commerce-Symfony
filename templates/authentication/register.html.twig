{% extends 'base.html.twig' %}

{% block body %}
    <div class="flex flex-col items-center justify-center px-6 py-8 mx-auto mt-16 md:min-h-screen lg:py-0"> <!-- Augmentez la valeur de "mt-16" pour déplacer le formulaire plus bas -->
        <div class="w-full bg-white rounded-lg shadow dark:border md:mt-0 sm:max-w-md xl:p-0">
            <div class="p-6 space-y-4 md:space-y-6 sm:p-8">
                <h1 class="text-xl font-bold leading-tight tracking-tight text-gray-900 md:text-2xl">
                    Creer un compte
                </h1>
                <form class="space-y-4 md:space-y-6" action="{{ path('app_home') }}" method="post" enctype="multipart/form-data">
                    <div class="flex flex-wrap -mx-2">
                        <div class="w-1/2 px-2 mb-4">
                            <label for="name" class="block mb-2 text-sm font-medium text-gray-900">First Name</label>
                            <input type="text" name="name" id="name" class="bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5" placeholder="First name" required="">
                        </div>
                        <div class="w-1/2 px-2 mb-4">
                            <label for="prenom" class="block mb-2 text-sm font-medium text-gray-900">Last Name</label>
                            <input type="text" name="prenom" id="prenom" class="bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5" placeholder="Last name" required="">
                        </div>
                    </div>
                    <div class="mb-4">
                        <label for="email" class="block mb-2 text-sm font-medium text-gray-900">Your email</label>
                        <input type="email" name="email" id="email" class="bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5" placeholder="name@company.com" required="">
                    </div>
                    <div class="flex flex-wrap -mx-2">

                        <div class="w-1/2 px-2 mb-4">
                        <label for="password" class="block mb-2 text-sm font-medium text-gray-900 dark">Password</label>
                        <input type="password" name="password" id="password" placeholder="••••••••" class="bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5" required="">
                    </div>
                        <div class="w-1/2 px-2 mb-4">
                        <label for="status" class="block mb-2 text-sm font-medium text-gray-900">Your Status</label>
                        <input type="text" name="status" id="status" class="bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5" placeholder="SELLER / BUYER" required="">
                    </div>
                    </div>
                    <button type="submit" class="w-full text-white bg-purple-600 hover:bg-primary-700 focus:ring-4 focus:outline-none focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center">
                        Sign in
                    </button>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
